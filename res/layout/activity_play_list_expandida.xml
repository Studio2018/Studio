<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#282d42"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:background="#282d42"
            android:layout_marginLeft="60px"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"
            android:layout_marginRight="80px"
            android:id="@+id/menuhamburguesa"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/studio3"
            android:layout_marginTop="45px"
            android:layout_marginLeft="1000px"
            android:id="@+id/studio"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="600px"
        android:layout_height="600px"
        android:src="@drawable/derulo"
        android:padding="70px"
        android:layout_marginTop="100px"
        android:id="@+id/imagenplaylist"

        />

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#282d42"
        android:text="Mix crossover"
        android:padding="10px"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="60px"
        android:textSize="15pt"
        android:layout_marginRight="60px"
        android:id="@+id/nombreplaylist"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@drawable/botonformato"
        android:layout_gravity="center_horizontal"
        android:text="Reproducir"
        android:textColor="#ffffff"
        android:paddingLeft="80px"
        android:paddingRight="80px"
        android:paddingTop="0px"
        android:paddingBottom="0px"
        android:id="@+id/reproducir"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Canciones"
        android:padding="20px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="60px"
        android:textSize="8pt"
        android:layout_marginRight="60px"
        android:background="#bfc0c0"
        android:id="@+id/cancionesletrero"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:id="@+id/mislistas"
        android:layout_marginTop="0px"
        android:layout_marginRight="60px"
        android:layout_marginLeft="60px"
        >


    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botonformato"
            android:src="@drawable/atrasblanco"
            android:layout_gravity="center"
            android:layout_marginLeft="500px"
            android:id="@+id/atras"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botonformato"
            android:src="@drawable/playblanco"
            android:layout_gravity="center"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:id="@+id/play"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botonformato"
            android:src="@drawable/adelanteblanco"
            android:layout_gravity="center"
            android:layout_marginRight="100px"
            android:id="@+id/next"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="40px"
        android:paddingTop="40px">

        <ImageButton
            android:padding="40px"
            android:id="@+id/files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:background="#ffffff"
            android:src="@drawable/folder" />

        <ImageButton
            android:padding="40px"
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:background="#ffffff"
            android:src="@drawable/playlists" />

        <ImageButton
            android:padding="40px"
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:background="#ffffff"
            android:src="@drawable/calendar" />

        <ImageButton
            android:padding="40px"
            android:id="@+id/persona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:background="#ffffff"
            android:src="@drawable/persona" />

    </LinearLayout>
</LinearLayout>